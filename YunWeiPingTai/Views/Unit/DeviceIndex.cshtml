@model List<DeviceDTO>
@{
    ViewData["Title"] = "设备详情";
}

<form class="layui-form " style="width:80%;">
    @Html.AntiForgeryToken()
    @Html.Hidden("Id")
    @Html.Hidden("UnitId")
    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">设备</label>
        <div class="layui-input-block">
            <select name="DeviceId" id="DeviceId" lay-filter="DeviceId" lay-verify="required">
                @foreach (var item in Model)
                {
                    <option value="@item.Id">@item.Name-@item.Version</option>
                }
            </select>
        </div>
    </div>

    <div class="layui-form-item layui-row layui-col-xs12">
        <label class="layui-form-label">SN码</label>
        <div class="layui-input-block">
            <input type="text" name="SNCode" class="layui-input" id="SNCode" placeholder="请输入SN码" lay-verify="required" autocomplete="off" />
        </div>
    </div>
    <div class="layui-form-item layui-row layui-col-xs12">
        <div class="layui-input-block">
            <button class="layui-btn layui-btn-sm" lay-submit="" lay-filter="addDevice">确定</button>
            <button type="reset" class="layui-btn layui-btn-sm layui-btn-primary">重置</button>
        </div>
    </div>
</form>
@section Scripts{
    <script type="text/javascript" src="~/layui/layui.js"></script>
    <script type="text/javascript" src="~/js/unitDeviceIndex.js?_=@DateTime.Now.ToString("yyyyMMddHHmmss")"></script>
}






